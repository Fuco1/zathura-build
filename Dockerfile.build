            gettext \
            libarchive-dev \
            libcairo-dev \
            libdjvulibre-dev \
            libgtk-3-dev \
            libmagic-dev \
            libpoppler-glib-dev \
            libspectre-dev \
            libsynctex-dev \
            pkg-config

COPY ./docker-build.sh /docker-build.sh

ENTRYPOINT ["/bin/bash"]
CMD ["/docker-build.sh"]
